<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">


  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-smallcaps"
      android:text="MENU"
      android:textColor="#131212"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.104" />

  <Button
      android:id="@+id/btnVerMisEventos"
      android:layout_width="148dp"
      android:layout_height="56dp"
      android:backgroundTint="#009975"
      android:text="Ver Mis Eventos"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="158dp" />

  <Button
      android:id="@+id/btnAdmin"
      android:layout_width="167dp"
      android:layout_height="56dp"
      android:layout_marginTop="24dp"
      android:backgroundTint="#009975"
      android:text="Administrar mis eventos"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnVerMisEventos" />

  <Button
      android:id="@+id/btnEventos"
      android:layout_width="161dp"
      android:layout_height="59dp"
      android:layout_marginTop="24dp"
      android:backgroundTint="#009975"
      android:text="Eventos"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnAdmin" />

  <Button
      android:id="@+id/btnRegistrar"
      android:layout_width="166dp"
      android:layout_height="69dp"
      android:layout_marginTop="24dp"
      android:backgroundTint="#009975"
      android:text="Registrar Evento"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.524"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnEventos" />


</androidx.constraintlayout.widget.ConstraintLayout>